@{
}

@model List<StudentPortal.Models.Entities.Student>

<h1>Students</h1>

<table class="table">
   <thead>
       <tr>
           <th>ID</th>
           <th>Name</th>
           <th>Email</th>
           <th>Phone</th>
           <th>Phone</th>
           <th> </th>
       </tr>
   </thead>
   <tbody>
       @foreach (var student in Model)
       {
           <tr>
               <td>@student.Id</td>
               <td>@student.Name</td>
               <td>@student.Email</td>
               <td>@student.Phone</td>
               <td>
                   <a class="btn btn-outline-primary" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
               </td>
           </tr>

       }
      
   </tbody> 

</table>


<div class="text-end mt-4">
    <button class="btn btn-outline-success" asp-controller="Student" asp-action="Add">+ Add Student</button>
</div>


